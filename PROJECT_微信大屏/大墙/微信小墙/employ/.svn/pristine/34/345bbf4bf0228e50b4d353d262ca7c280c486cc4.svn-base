.textLine {
  word-wrap: break-word;
  word-break: normal;
}
.flex-con {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.flex-vertical {
  -webkit-box-orient: vertical;
  -webkit-flex-flow: column;
  flex-flow: column;
}
.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
html,
body {
  background: #EFEFF4;
}
#header {
  width: 100%;
  height: 44px;
  line-height: 44px;
  font-size: 1.6rem;
  text-align: center;
  position: fixed;
  position: relative;
  background: #12B8F6;
  color: #ffffff;
}
#header:after {
  content: '我的账户';
}
#header span {
  position: absolute;
  width: 60px;
  height: 100%;
}
#header .close {
  left: 0;
}
#header .tx {
  right: 0;
}
.content {
  width: 100%;
  height: auto;
}
.content .moneyAmount {
  background: #ffffff;
  width: 100%;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 2rem;
  padding: 1rem 2rem;
}
.content .moneyAmount:before {
  content: '账户余额:';
}
.content .moneyAmount b {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  display: inline-block;
  width: 100%;
  text-align: center;
}
.content .moneyAmount b:after {
  content: '.00元';
}
.content .title {
  margin-top: 20px;
  background: #ffffff;
  width: 100%;
  text-align: center;
  padding: 2rem 0;
  font-size: 2rem;
  color: #e4e4e4;
  border-bottom: 1px solid #e4e4e4;
}
.content .title:before {
  content: '收入明细';
}
.content .fl {
  width: 100%;
  height: auto;
  font-size: 1.6rem;
  background: #ffffff;
}
.content .fl ul {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: auto;
  padding: 1rem 0;
}
.content .fl li {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  border-right: 1px solid #e4e4e4;
}
.content .fl li:last-child {
  border: none;
}
.content .fl li:nth-child(1):before {
  content: '时间';
}
.content .fl li:nth-child(2):before {
  content: '项目';
}
.content .fl li:nth-child(3):before {
  content: '金额';
}
