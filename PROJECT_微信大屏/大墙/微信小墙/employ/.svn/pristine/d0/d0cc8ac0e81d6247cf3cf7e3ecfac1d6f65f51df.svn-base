.flex-con {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.flex-vertical {
  -webkit-box-orient: vertical;
  -webkit-flex-flow: column;
  flex-flow: column;
}
.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
#wrap {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-flex-flow: column;
  flex-flow: column;
}
#header {
  width: 100%;
  height: 40px;
  position: relative;
}
#header ul {
  width: 100%;
}
#header li {
  color: #000;
  width: 100%;
  text-align: center;
  font-size: 2rem;
  line-height: 40px;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
}
#main {
  height: auto;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  width: 100%;
}
footer {
  width: 100%;
  height: 44px;
  background: red;
}
footer ul {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 2rem;
}
footer ul li {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  height: 44px;
  line-height: 44px;
  cursor: pointer;
}
.active {
  background: orange;
}
.hidden {
  display: none!important;
}
