.textLine {
  word-wrap: break-word;
  word-break: normal;
}
html,
body {
  background: #ffffff;
}
#header {
  width: 100%;
  height: 44px;
  line-height: 44px;
  font-size: 1.6rem;
  text-align: center;
  position: fixed;
  position: relative;
  background: #12B8F6;
  color: #ffffff;
}
#header:after {
  content: '投诉与建议';
}
#header span {
  position: absolute;
  left: 0;
  width: 60px;
  height: 100%;
}
.suggestRegion {
  font-size: 2rem;
  width: 100%;
  height: auto;
}
.suggestRegion ul {
  width: 100%;
  height: auto;
}
.suggestRegion > div {
  text-align: center;
}
.suggestRegion li {
  padding: 1rem 2rem;
  border-top: 1px solid #e4e4e4;
  border-bottom: 1px solid #e4e4e4;
}
.suggestRegion li:nth-child(1) {
  margin-top: 3rem;
  padding-left: 5.6rem;
}
.suggestRegion li:nth-child(2) {
  padding-left: 5.6rem;
  margin-top: -1px;
  margin-bottom: 20px;
}
.suggestRegion input {
  width: 100%;
  outline: none;
}
.suggestRegion textarea {
  width: 100%;
  height: 7rem;
  outline: none;
  resize: none;
  word-wrap: break-word;
  overflow-x: hidden;
  overflow-y: auto;
}
.suggestRegion .btn {
  margin-top: 5rem;
  margin-bottom: 2rem;
  -webkit-border-radius: 3px;
  border-radius: 3px;
  border: 2px solid #12B8F6;
  color: #ffffff;
  background: #12B8F6;
  display: inline-block;
  padding: 1.5rem 0;
  width: 80%;
}
