.flex-con {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.flex-vertical {
  -webkit-box-orient: vertical;
  -webkit-flex-flow: column;
  flex-flow: column;
}
.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
html,
body {
  background: #EFEFF4;
}
.btn {
  text-align: center;
  display: inline-block;
  -webkit-border-radius: 3px;
  border-radius: 3px;
}
#header {
  width: 100%;
  height: auto;
  background: #ffffff;
  padding: 1rem 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: center;
  font-size: 1.6rem;
}
#header div {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
#header div:nth-child(1) {
  border-right: 1px solid #e4e4e4;
}
#content {
  width: 100%;
  height: auto;
  font-size: 1.6rem;
  box-sizing: border-box;
  color: #919191;
}
#content > div {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100%;
  padding-left: 2rem;
  background: #ffffff;
  margin-top: 2rem;
  align-items: center;
  justify-content: center;
}
#content ul {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
#content li {
  width: auto;
  line-height: 3rem;
  height: 3rem;
}
#content ul li:before {
  text-align: left;
  display: inline-block;
  width: 6rem;
}
#content ul li:nth-child(1):before {
  content: '订单号:';
}
#content ul li:nth-child(2):before {
  content: '发件人:';
}
#content ul li:nth-child(3):before {
  content: '收件人:';
}
#content ul li:nth-child(4):before {
  content: '费用:';
}
#content span {
  display: inline-block;
}
#content .btn {
  padding: 1rem 2.5rem;
  color: #ffffff;
  background: #12B8F6;
}
#content .openOrder {
  width: 5rem;
  height: 10rem;
  background: transparent url(../image/icon_next.png) no-repeat center center / 36px 36px;
}
